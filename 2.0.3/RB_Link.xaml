<Window x:Class="RB_Package_Remastered.RB_Link"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RB_Package_Remastered"
        mc:Ignorable="d"
        Title="Link" Height="450" Width="400" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listBox1" MouseDoubleClick="listBox1_MouseDoubleClick" Margin="10" Grid.ColumnSpan="3"/>
        <TextBox x:Name="textbox1" Margin="10" Grid.Row="1" KeyDown="TextBox_KeyDown"/>
        <Button x:Name="Add" Content="추가" Margin="10" Grid.Row="1" Grid.Column="1" Click="Add_Click"/>
        <Button x:Name="Del" Content="삭제" Margin="10" Grid.Row="1" Grid.Column="2" Click="Del_Click"/>
    </Grid>
</Window>
